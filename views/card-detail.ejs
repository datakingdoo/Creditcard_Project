<!-- card-detail.ejs -->
<%- include('header.ejs') %>

<style>

  h1 {
    color: #fff;
    text-align: center;
    margin-top: 50px;
    font-size: 36px;
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  li1 {
    background-color: #fff;
    border-radius: 16px;
    margin: 20px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
    overflow: hidden;
    width: 250px;
    height: 300px;
    text-align: center;
    position: relative;
  }

  li1:hover {
    transform: scale(1.05);
  }

  .image-container {
    width: 100%;
    height: 150px;
    overflow: hidden;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }

  img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  strong {
    display: block;
    margin: 16px 0 8px;
    font-weight: bold;
  }
  strong.card {
    font-size: 20px;
    margin-bottom: 16px; /* 조절 가능한 공백 크기 */
}


  p {
    color: #555;
    margin-bottom: 20px;
    font-size: 14px;
  }
</style>

  


<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-content">
        <div class="heading-section">
          <h4 style = "color:#333; text-align: center;">&#127804;선택 카드&#127804; </h4>
          
          <div style="text-align: right;" class="main-button">
            <a href="/recommend" >다시 선택하기</a>
            <a href="/" >Home</a>
          </div>
          <br>
          <hr>
          <br>
        </div>
        <ul>
          <% if (result && result.length > 0) { %>
            <% result.forEach(card => { %>
              <li1>
                <div class="image-container">
                  <a href="<%= card.링크 %>">
                    <img src="<%= card.이미지 %>" alt="카드 이미지">
                  </a>
                </div>
                <strong style="font-size:20px;  "><%= card.상품명 %></strong> 
                <strong style="position: absolute;
                bottom: 8%;
                width: 100%;"><%= card.카드사 %></strong> 
                <p></p>
                <!-- <p>부가 설명이 들어갈 수 있습니다.</p> -->
              </li1>
            <% }) %>
          <% } else { %>
            <p>선택된 카드 정보가 없습니다.</p>
          <% } %>
        </ul>
        <br>
        <hr>
        <br>
        <div style="text-align: center;" class="main-button">
          <a href="/recommend" >다시 선택하기</a>
          <a href="/" >Home</a>
        </div>
      <%- include('footer.ejs') %>
      </div>
    </div>
  </div>
</div>