<!-- 추가된 JavaScript 코드 -->
<script>
  // 페이지 로딩 후 5초 뒤에 결과 페이지로 이동
  document.addEventListener("DOMContentLoaded", function () {
    setTimeout(function () {
      // 폼을 선택하고 submit() 호출
      document.getElementById("gradeSearchForm").submit();
