<style>
  .main-button{
    text-align: right;
  }
</style>
<%-include('header.ejs')%>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-content">
        <form id="loginForm" action="/transloginProc" method="post">
          <div class="heading-section">
            <h4><em>Login!</em></h4>
            <br>
          </div>
          <div class="form-group">
            <h4>Email</h4>
            <input type="email" name="email" class="form-control2" id="email">
            <br>
            <h4>Password</h4>
            <input type="password" name="pw" class="form-control2" id="pw">
          </div>
          <br>
          <br>
          <div class="main-button">
            <a href="#" id="loginBtn">Login</a>
          </div>
          <br>
          <div class="main-button">
            <a href="/register" role="button">Register</a>
          </div>
        
          <%-include('footer.ejs')%>
        </form>
        
        <script>
          document.getElementById('loginBtn').addEventListener('click', function() {
            // 폼을 가져오고 submit() 메서드를 호출하여 제출
            document.getElementById('loginForm').submit();
          });
        </script>
        
        
    </div>
    </div>
  </div>
</div>